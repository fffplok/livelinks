{
    "rules": {
        ".read": true,
        ".write": true,
        "links": {
          ".write": "auth != null",
          "$link": {
            ".write": "auth != null",
            "createdAt": {
              ".validate": "(!data.exists() || !newData.exists()) && newData.val() == now"
            },
            "author": {
              ".validate": "!data.exists() || !newData.exists()"
            },
            "votes": {
              "$vote": {
                ".validate": "auth.uid == $vote && (newData.val() === 1 || newData.val() === -1) && (newData.val() != data.val())" 
              }
            },
            ".indexOn": ["voteCount", "createdAt"]
          }
        },
        "users": {
          "$user": {
            ".write": "auth != null",
            "alias": {
              ".validate": "!root.child('aliases').child(newData.val()).exists()"
            },
            "links": {
               "$link": {
                  ".validate": "root.child('links').child($link).child('users').child($user).exists()" 
               }
            }
          }
        },
        "days": {
          "$day": {
            ".indexOn": [".value"] 
          }
        }
    }
}